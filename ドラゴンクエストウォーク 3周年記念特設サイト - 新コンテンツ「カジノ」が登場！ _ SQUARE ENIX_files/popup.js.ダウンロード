var button_popup_window_state=!1;function InitPopupWindow(){if(0<$(".button_popup_window").length&&$(".popup").length<1){$("body").append('<div class="popup disabled"></div>')}}function InitPopupCloseButton(){0<$(".popup_wrapper:not(.initialized)").length&&$(".popup_wrapper:not(.initialized)").each(function(){$(".button_close",this).click(function(t){t.preventDefault?t.preventDefault():t.returnValue=!1,$(this).closest(".buttonbox").css("opacity",0),$(".popup").addClass("disabled").css("opacity",0);var p="#"+$(this).closest(".popup_wrapper").attr("id");$(p).addClass("disabled").css("opacity",0),button_popup_window_state=!1})}).addClass("initialized")}function InitOpenPopupLink(t,p,i){return $("#"+t+".popup_wrapper").length<1&&'<div id="'+t+'" class="disabled popup_wrapper"><div class="popup_container"><div class="popup_header"></div><article class="popup_body"><h1>'+p+"</h1><section>"+i+'</section><hr class="title_underline" /><div class="buttonbox"><button class="button_close touch_reaction" /></div></article><div class="popup_footer"></div></div></div>'}function OpenPopupWindow(t){if(!button_popup_window_state&&0<$("#"+t+".popup_wrapper").length){button_popup_window_state=!0;var p="#"+t+" .popup_body";$(p).css("opacity",0),$(".popup").removeClass("disabled").velocity("stop",!0).velocity({opacity:1},{duration:200,easing:"easeOutCubic",complete:function(){$("#"+t).removeClass("disabled").velocity("stop",!0).velocity({scale:.6},{duration:0}).velocity({opacity:1,scale:1.05},{duration:150,easing:"easeOutCubic"}).velocity({scale:1},{duration:200,easing:"easeOutCubic",complete:function(){$(p).velocity("stop",!0).velocity({opacity:1},{duration:200,easing:"easeInOutCublic"}),$(".buttonbox",this).velocity("stop",!0).velocity({translateY:10},{duration:0,delay:50}).velocity({opacity:1,translateY:0},{duration:200,easing:"easeInOutCublic"})}})}})}}function AddPopupWindow(t,p,i){InitPopupWindow();var o=InitOpenPopupLink(t,p,i);o&&$(".popup").append(o),InitPopupCloseButton()}$(window).on("load",function(){InitPopupWindow(),0<$(".button_popup_window:not(.initialized)").length&&($(".button_popup_window:not(.initialized)").each(function(){var t="all";if($(this).data("popup-device")&&(t=$(this).data("popup-device")),"all"==t||"pc"==t&&!GLOBAL_MANAGER.smartphone||"sp"==t&&GLOBAL_MANAGER.smartphone){$(this).addClass("enabled");var p=InitOpenPopupLink("popup_window_"+$(this).data("popup-id"),$(this).data("popup-title"),$(this).data("popup-body"));p&&$(".popup").append(p)}}),$(".button_popup_window.enabled:not(.initialized)").each(function(){$(this).click(function(t){t.preventDefault?t.preventDefault():t.returnValue=!1,OpenPopupWindow("popup_window_"+$(this).data("popup-id"))}).addClass("initialized")})),InitPopupCloseButton()});